{
  "name": "contracts",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "mud build",
    "clean": "forge clean && shx rm -rf src/**/codegen",
    "deploy:local": "mud deploy",
    "deploy:garnet": "mud deploy --profile=garnet",
    "deploy:redstone": "mud deploy --profile=redstone",
    "upgrade:local": "forge script script/UpgradeWorld.s.sol --rpc-url http://localhost:8545 --broadcast",
    "upgrade:garnet": "forge script script/UpgradeWorld.s.sol --rpc-url https://rpc.garnetchain.com --broadcast",
    "upgrade:redstone": "forge script script/UpgradeWorld.s.sol --rpc-url https://rpc.redstonechain.com --broadcast",
    "dev": "mud dev-contracts",
    "lint": "pnpm run prettier && pnpm run solhint",
    "prettier": "prettier --write 'src/**/*.sol'",
    "solhint": "solhint --config ./.solhint.json 'src/**/*.sol' --fix",
    "test": "tsc --noEmit && mud test"
  },
  "dependencies": {
    "@latticexyz/cli": "2.2.14",
    "@latticexyz/schema-type": "2.2.14",
    "@latticexyz/store": "2.2.14",
    "@latticexyz/world": "2.2.14",
    "@latticexyz/world-modules": "2.2.14",
    "@openzeppelin/contracts": "^5.1.0"
  },
  "devDependencies": {
    "@types/node": "^18.15.11",
    "ds-test": "https://github.com/dapphub/ds-test.git#e282159d5170298eb2455a6c05280ab5a73a4ef0",
    "forge-std": "https://github.com/foundry-rs/forge-std.git#74cfb77e308dd188d2f58864aaf44963ae6b88b1",
    "prettier": "3.2.5",
    "prettier-plugin-solidity": "1.3.1",
    "solhint": "^3.3.7",
    "solhint-config-mud": "2.2.14",
    "solhint-plugin-mud": "2.2.14"
  }
}
